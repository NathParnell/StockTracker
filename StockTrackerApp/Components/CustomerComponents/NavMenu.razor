@using StockTrackerCommon.Models;


<nav class="navbar">
    @if (_authorizationService.IsLoggedIn == true)
    {
        <div id="navHome" class="link" @onclick="() => NavigateHome()" title="Home">
            <span class="oi oi-home" style="color: #fdf7f7;" aria-hidden="true"></span>
            <p>Home</p>
        </div>
        <div id="navProducts" class="link" @onclick="() => NavigateViewProducts()" title="View Products">
            <span class="oi oi-menu" style="color: #fdf7f7;" aria-hidden="true"></span>
            <p>Products</p>
        </div>
        <div id="navBasket" class="link" @onclick="() => NavigateBasket()" title="View Basket">
            <span class="oi oi-cart" style="color: #fdf7f7;" aria-hidden="true"></span>
            <p>Basket</p>
        </div>
        <div id="navOrderHistory" class="link" @onclick="() => NavigateOrderHistory()" title="Order History">
            <span class="oi oi-list" style="color: #fdf7f7;" aria-hidden="true"></span>
            <p>Order History</p>
        </div>
        <div id="navMessages" class="link" @onclick="() => NavigateMessages()" title="Messages">
            <span class="oi oi-chat" style="color: #fdf7f7;" aria-hidden="true"></span>
            <p>Messages</p>
        </div>
        <div id="navNotifications" class="link" @onclick="() => NavigateNotifications()" title="Notifications">
            <span class="oi oi-envelope-open" style="color: #fdf7f7;" aria-hidden="true"></span>
            <p>Notifications</p>
        </div>
        <div id="navLogout" class="link" @onclick="() => Logout()" title="Logout">
            <span class="oi oi-account-logout" style="color: #fdf7f7;" aria-hidden="true"></span>
            <p>Logout</p>
        </div>
    }
</nav>